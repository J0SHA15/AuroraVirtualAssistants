{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@now/python"
    }
  ],
  "routes": [
    {
      "src": "/index.html",  // Ruta para index.html
      "dest": "app.py"
    },
    {
      "src": "/static/(.*)",  // Ruta para archivos est√°ticos
      "dest": "/static/$1"    // Directorio de origen (static)
    },
    {
      "src": "/templates/(.*)",  // Ruta para archivos de plantillas
      "dest": "/templates/$1"    // Directorio de origen (templates)
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}

